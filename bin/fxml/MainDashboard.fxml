<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainController">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- Top: Welcome and Logout -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Button fx:id="logoutButton" text="Logout" />
        </HBox>
    </top>

    <!-- Center: Table of Transactions -->
    <center>
        <TableView fx:id="tableView" prefHeight="300">
            <columns>
                <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
                <TableColumn fx:id="colCategory" text="Category" prefWidth="100"/>
                <TableColumn fx:id="colAmount" text="Amount" prefWidth="80"/>
                <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <!-- Right: Charts -->
    <right>
        <VBox spacing="15">
            <Label text="Category Distribution" />
            <PieChart fx:id="categoryChart" prefHeight="200" prefWidth="250"/>
            <Label text="Monthly Spending" />
            <BarChart fx:id="monthlyChart" prefHeight="200" prefWidth="250">
                <xAxis>
                    <CategoryAxis fx:id="xAxis" label="Month"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" label="Amount"/>
                </yAxis>
            </BarChart>
        </VBox>
    </right>

    <!-- Bottom: Add Transaction Form -->
    <bottom>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="dateField" promptText="YYYY-MM-DD" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Category:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="categoryField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Amount:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="amountField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Description:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="descriptionField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Button fx:id="addButton" text="Add Transaction" onAction="#handleAdd" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <Button fx:id="exportButton" text="Export CSV" onAction="#handleExportCSV" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="balanceLabel" text="Total Balance: $0.00" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        </GridPane>
    </bottom>

</BorderPane>
