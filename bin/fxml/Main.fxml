<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainController" prefWidth="900" prefHeight="600">

    <!-- Top Toolbar with Title and Logout -->
    <top>
        <ToolBar style="-fx-background-color: #3c3f41;">
            <Label text="CashFlow Analyzer" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Logout" fx:id="logoutButton" onAction="#handleLogout"/>
        </ToolBar>
    </top>

    <!-- Left: Transaction Form -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Add Transaction" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;"/>
            <TextField fx:id="dateField" promptText="Date (YYYY-MM-DD)"/>
            <TextField fx:id="categoryField" promptText="Category"/>
            <TextField fx:id="amountField" promptText="Amount"/>
            <TextField fx:id="descriptionField" promptText="Description"/>
            <Button text="Add Transaction" onAction="#handleAdd"/>
            <Button text="Export CSV" onAction="#handleExportCSV"/>
        </VBox>
    </left>

    <!-- Center: Table of Transactions -->
    <center>
        <TableView fx:id="tableView">
            <columns>
                <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
                <TableColumn fx:id="colCategory" text="Category" prefWidth="150"/>
                <TableColumn fx:id="colAmount" text="Amount" prefWidth="100"/>
                <TableColumn fx:id="colDescription" text="Description" prefWidth="250"/>
            </columns>
        </TableView>
    </center>

    <!-- Right: Dashboard -->
    <right>
        <VBox spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="balanceLabel" text="Total Balance: $0.00" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Spending by Category" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
            <PieChart fx:id="categoryChart" prefWidth="300" prefHeight="300"/>
            <Label text="Monthly Spending" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
            <BarChart fx:id="monthlyChart" prefWidth="300" prefHeight="250">
                <xAxis>
                    <CategoryAxis fx:id="xAxis"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis"/>
                </yAxis>
            </BarChart>
        </VBox>
    </right>

    <stylesheets>
        <String value="/css/style.css"/>
    </stylesheets>

</BorderPane>
