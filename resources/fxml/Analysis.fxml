<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AnalysisController">
    <top>
        <Label text="Financial Analysis" style="-fx-font-size:18px; -fx-font-weight:bold;" />
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <Label text="Spending Trends" style="-fx-font-weight:bold;" />
            <LineChart fx:id="trendChart" prefWidth="700" prefHeight="300">
                <xAxis>
                    <CategoryAxis fx:id="xAxisTrend" label="Month"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxisTrend" label="Amount"/>
                </yAxis>
            </LineChart>

            <HBox spacing="20">
                <VBox fx:id="analysisCards" spacing="10">
                    <!-- Dynamic cards for insights -->
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
