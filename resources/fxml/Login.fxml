<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.LoginController"
      alignment="CENTER" spacing="15"
      style="-fx-background-color: #2b2b2b; -fx-text-fill: #eeeeee;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="CashFlow Analyzer" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffcc00;"/>

    <TextField fx:id="usernameField" promptText="Username"
               style="-fx-background-color: #3c3f41; -fx-text-fill: #eeeeee;"/>
    <PasswordField fx:id="passwordField" promptText="Password"
                   style="-fx-background-color: #3c3f41; -fx-text-fill: #eeeeee;"/>
    <Label fx:id="messageLabel" style="-fx-text-fill: #ff6666;"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="loginButton" text="Login" style="-fx-background-color: #ffcc00; -fx-text-fill: #2b2b2b;"/>
        <Button fx:id="signUpButton" text="Sign Up" style="-fx-background-color: #3c3f41; -fx-text-fill: #eeeeee;"/>
    </HBox>

</VBox>
