<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainController">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- ðŸ”¹ Top: Welcome + Navigation -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <Button fx:id="logoutButton" text="Logout"/>
            <Button fx:id="spendingDistButton" text="Spending & Distribution"/>
            <Button fx:id="analysisButton" text="Analysis"/>
        </HBox>
    </top>

    <!-- ðŸ”¹ Left: Add Transaction + Income Entry -->
    <left>
        <VBox spacing="12" alignment="TOP_LEFT">
            <Label text="Add Transaction" style="-fx-font-weight:bold;"/>

            <Label text="Date:"/>
            <TextField fx:id="dateField" promptText="YYYY-MM-DD"/>

            <Label text="Category:"/>
            <TextField fx:id="categoryField"/>

            <Label text="Amount:"/>
            <TextField fx:id="amountField"/>

            <Label text="Description:"/>
            <TextField fx:id="descriptionField"/>

            <HBox spacing="10">
                <Button fx:id="addButton" text="Add" onAction="#handleAdd"/>
                <Button fx:id="exportButton" text="Export CSV" onAction="#handleExportCSV"/>
            </HBox>

            <Separator/>

            <Label text="Income Entry" style="-fx-font-weight:bold;"/>
            <HBox spacing="10">
                <ComboBox fx:id="incomeTypeBox">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Monthly"/>
                            <String fx:value="Biweekly"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <TextField fx:id="incomeField" promptText="Enter Income"/>
                <Button fx:id="setIncomeButton" text="Set" onAction="#handleSetIncome"/>
            </HBox>
        </VBox>
    </left>

    <!-- ðŸ”¹ Center: Charts + Transactions -->
    <center>
        <VBox spacing="20">
            <!-- Charts -->
            <HBox spacing="25">
                <!-- Money Flow Chart -->
                <VBox>
                    <Label text="Money Flow (Monthly Spending)" 
                           style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <BarChart fx:id="monthlyChart" prefHeight="250" prefWidth="400">
                        <xAxis>
                            <CategoryAxis fx:id="xAxis" label="Month"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="yAxis" label="Amount"/>
                        </yAxis>
                    </BarChart>
                </VBox>

                <!-- Category Distribution -->
                <VBox>
                    <Label text="Spending by Category" 
                           style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <PieChart fx:id="categoryChart" prefHeight="250" prefWidth="350"/>
                </VBox>
            </HBox>

            <!-- Transaction Table -->
            <VBox spacing="10">
                <Label text="Recent Transactions" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                <TableView fx:id="tableView" prefHeight="300" prefWidth="700">
                    <columns>
                        <TableColumn text="Date" fx:id="colDate" prefWidth="150"/>
                        <TableColumn text="Category" fx:id="colCategory" prefWidth="150"/>
                        <TableColumn text="Amount" fx:id="colAmount" prefWidth="150"/>
                        <TableColumn text="Description" fx:id="colDescription" prefWidth="250"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- ðŸ”¹ Bottom: Summary -->
    <bottom>
        <HBox spacing="25" alignment="CENTER">
            <Label fx:id="balanceLabel" text="Total Spending: $0.00"/>
            <Label fx:id="savingsLabel" text="Savings: $0.00" style="-fx-font-weight:bold;"/>
        </HBox>
    </bottom>

</BorderPane>
