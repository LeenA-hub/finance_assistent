<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <Button fx:id="logoutButton" text="Logout"/>
        </HBox>
    </top>

    <right>
        <VBox spacing="12" alignment="TOP_LEFT">
            <Label text="Add Transaction" style="-fx-font-weight:bold;"/>
            <Label text="Date:"/><TextField fx:id="dateField" promptText="YYYY-MM-DD"/>
            <Label text="Category:"/><TextField fx:id="categoryField"/>
            <Label text="Amount:"/><TextField fx:id="amountField"/>
            <Label text="Description:"/><TextField fx:id="descriptionField"/>
            <HBox spacing="10">
                <Button fx:id="addButton" text="Add" onAction="#handleAdd"/>
                <Button fx:id="exportButton" text="Export CSV" onAction="#handleExportCSV"/>
            </HBox>
        </VBox>
    </right>

    <center>
        <VBox spacing="20">
            <HBox spacing="25">
                <VBox spacing="5">
                    <Label text="Money Flow (Monthly Spending)" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <BarChart fx:id="monthlyChart" prefHeight="250" prefWidth="400">
                        <xAxis><CategoryAxis fx:id="xAxis" label="Month"/></xAxis>
                        <yAxis><NumberAxis fx:id="yAxis" label="Amount"/></yAxis>
                    </BarChart>
                </VBox>
                <VBox spacing="5">
                    <Label text="Spending by Category" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <PieChart fx:id="categoryChart" prefHeight="250" prefWidth="350"/>
                </VBox>
            </HBox>
            <VBox spacing="10">
                <Label text="Recent Transactions" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                <TableView fx:id="tableView" prefHeight="300" prefWidth="700">
                    <columns>
                        <TableColumn text="Date" fx:id="colDate" prefWidth="150"/>
                        <TableColumn text="Category" fx:id="colCategory" prefWidth="150"/>
                        <TableColumn text="Amount" fx:id="colAmount" prefWidth="150"/>
                        <TableColumn text="Description" fx:id="colDescription" prefWidth="250"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="25" alignment="CENTER">
            <Label fx:id="balanceLabel" text="Total Balance: $0.00"/>
        </HBox>
    </bottom>
</BorderPane>
